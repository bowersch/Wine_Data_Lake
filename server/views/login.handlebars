<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700" rel="stylesheet">

<div class="login-page screen">
    <div class="overlap-group6">
        <div class="base"></div>
        <img class="wine-background" src="/images/wine-background.png" alt="Wine Background" />
        <div class="overlap-group4">
            <img class="logo-container" src="/images/wineLogo.JPG" alt="Logo Container" />
            <h1 class="title">Login</h1>
            <p class="sign-in-to-your-account"> Sign in to your account</p>
            <div class="username-input">
                <div class="username-container">
                    <img class="x-solid-1" src="/images/user-solid-1@2x.png" alt="user-solid 1" />
                    <div class="username montserrat-medium-windsor-28px-2">Username</div>
                </div>
            </div>
            <div class="password-input">
                <div class="overlap-group1">
                    <img class="x-solid-1" src="/images/lock-solid-1@2x.png" alt="lock-solid 1" />
                    <div class="password montserrat-medium-windsor-28px-2">Password</div>
                </div>
            </div>
            <div class="overlap-group2">
                <div class="login">Login</div>
            </div>
            <div class="i-forgot-my-password">I forgot my password</div>
            <div class="overlap-group3">
                <div class="new-account">Register New Account</div>
            </div>
        </div>
    </div>
</div>