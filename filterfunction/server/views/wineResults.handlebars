<div class="resultsWrapper">
        <div class="infoContainer">
                <div class="filtersContainer">
                        {{#each data.activeFilters}}
                                <div class="activeFilter">
                                        {{this}}
                                        <button><i class="fa-solid fa-xmark"></i></button>
                                </div>
                        {{/each}}
                </div>
                <hr class="solid">
                <div class="filtersTitle">
                        Filters
                        <button class="clearButton">Clear All <i class="fa-solid fa-xmark"></i></button>
                </div>
                <hr class="solid">
                <div class="keywordsContainer">
                        {{#each data.activeKeywords}}
                                <div class="activeKeyword">
                                        {{this}}
                                        <button><i class="fa-solid fa-xmark"></i></button>
                                </div>
                        {{/each}}
                </div>
                <!-- filter area -->
                <div>
                        <form method="GET" id="filter-results" action="/search-filter">
                                <div>
                                    <input type="text" class="filter-search-area" name="filter_search" value="{{ data.search }}"/>
                                </div>
                                <div>
                                    <h4>Body</h4>
                                    <input type="radio" name="filter_body" value="light"/>light
                                    <input type="radio" name="filter_body" value="moderate"/>moderate
                                    <input type="radio" name="filter_body" value="heavy"/>heavy
                                </div>
                                <div>
                                    <h4>Sweetness</h4>
                                    <input type="radio" name="filter_sweet" value="1"/>Bone Dry
                                    <br>
                                    <input type="radio" name="filter_sweet" value="2"/>Dry
                                    <br>
                                    <input type="radio" name="filter_sweet" value="3"/>Off Dry
                                    <br>
                                    <input type="radio" name="filter_sweet" value="4"/>Medium Sweet
                                    <br>
                                    <input type="radio" name="filter_sweet" value="5"/>Sweet
                                </div>
                                <div>
                                    <h4>Alcohol</h4>
                                    from <input type="text" class="filter-alcohol-area" name="filter_alcohol_from" placeholder="xx.x%"/>
                                    to <input type="text" class="filter-alcohol-area" name="filter_alcohol_to" placeholder="xx.x%"/>
                                </div>
                                <div>
                                    <button class="apply-button" type="submit">
                                        Apply
                                    </button>
                                </div>
                        </form>
                </div>
        </div>
        <div class="resultsContainer">
                {{#each data.rows}}
                        <a href="/wines/{{this.bottle_id}}"><div class="result">
                                <div class="resultInfo">
                                        <div class="title">
                                                {{this.wine_name}}
                                        </div>
                                        <div class="subtitle">
                                                {{this.winery_name}}
                                        </div>
                                        <div class="keywords">
                                                {{this.varietal_name}}
                                        </div>
                                        <br>
                                        <div class="description">
                                                {{this.description}}
                                        </div>
                                </div>
                                <div class="resultTechsheet">
                                        <embed src="{{this.source_file}}">
                                </div>
                        </div></a>
                {{/each}}
        </div>
</div>
